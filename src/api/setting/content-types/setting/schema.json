{
  "kind": "singleType",
  "collectionName": "settings",
  "info": {
    "singularName": "setting",
    "pluralName": "settings",
    "displayName": "Ajustes",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "whatsappNumber": {
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "type": "string",
      "required": true
    },
    "contactFormEmail": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "email",
      "required": true
    },
    "primaryColor": {
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "customField": "plugin::color-picker.color",
      "required": true
    },
    "secondaryColor": {
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "customField": "plugin::color-picker.color",
      "required": true
    },
    "tertiaryColor": {
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "required": true,
      "customField": "plugin::color-picker.color"
    },
    "whatsappFrom": {
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "type": "time",
      "required": true,
      "default": "09:00"
    },
    "whatsappTo": {
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "type": "time",
      "default": "18:00",
      "required": true
    }
  }
}
